type Campaign {
  id: String!
  name: String!
  searchCriteria: ProductSearchByCriteriaBlob!
}

type Product @key(fields: "id") {
  id: String!
  name: String!
}

type ProductSearchByCriteriaBlob @key(fields: "query") {
  products: [Product!]! @external @provides(fields: "query")
  query: String!
}

type Query {
  campaigns: [Campaign!]!
}